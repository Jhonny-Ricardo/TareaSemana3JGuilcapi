<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaSemana3JGuilcapi.MainPage">

    <StackLayout>
        <Entry x:Name="txtUser"
               Placeholder="Ingrese el usuario"></Entry>
        <Entry x:Name="txtPass"
               Placeholder="Ingrese la contraseña" IsPassword="true"></Entry>
        <Button x:Name="btnAbrir"
                Text="Abrir"
                Clicked="btnAbrir_Clicked">
        </Button>
    </StackLayout>

</ContentPage>
